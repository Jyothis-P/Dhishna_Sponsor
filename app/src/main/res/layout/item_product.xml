<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="8dp"
    android:gravity="center_vertical"
    android:background="@drawable/box_only_border_red">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Aditya Birla"
        android:layout_gravity="center_vertical"
        android:id="@+id/cname_text_view"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Edapally"
        android:layout_gravity="center_vertical"
        android:id="@+id/locale_text_view"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="8dp"
        android:text="Replied posively might wait sometime befor the next one"
        android:layout_gravity="center_vertical"
        android:id="@+id/status_text_view"/>
</LinearLayout>